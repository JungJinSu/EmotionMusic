		<result column="regdt" property="regdt"/>
	</resultMap> -->
	
	<!-- 감성 공유 리스트 쿼리  -->
	<!-- <select id="list" resultType="SentShareDTO">
		SELECT bbsno, subject, wname, readcnt, regdt FROM sentshare ORDER BY bbsno DESC
	</select> -->
	
	<!-- 감성 공유 리스트 쿼리  -->
	<select id="list" resultType="SentShareDTO">
		<![CDATA[
			SELECT a.* FROM ( 
				SELECT b.* FROM ( 
					SELECT * FROM sentshare ORDER BY bbsno desc 
				) b 
			) a WHERE a.bbsno <= 15 AND a.bbsno >= 6 ORDER BY bbsno desc
		]]>
		
		<!-- SELECT bbsno, subject, wname, readcnt, regdt FROM sentshare WHERE bbsno = 1 -->
	</select>
	
	<!-- 감성 공유 작성 쿼리 -->
	<insert id="create" parameterType="SentShareDTO">
		<selectKey keyProperty="bbsno" resultType="int" order="BEFORE">
			SELECT NVL(MAX(bbsno), 0)+1 as bbsno FROM sentshare
		</selectKey>
		INSERT INTO sentshare(bbsno, wname, subject, content, readcnt, regdt) 
		VALUES(#{bbsno}, #{wname}, #{subject}, #{content}, #{readcnt}, sysdate)
	</insert>
	
	<!-- 감성 공유 삭제 쿼리 -->
	<select id="read" parameterType="int" resultType="SentShareDTO">
		SELECT bbsno, subject, wname, content, readcnt, regdt FROM sentshare WHERE bbsno = #{bbsno}
	</select>
	
	<!-- 감성 공유 삭제 처리 -->
	<delete id="delete" parameterType="SentShareDTO">
		DELETE FROM sentshare WHERE bbsno = #{bbsno}
	</delete>
	
	<!-- 감성공유 수정 처리 -->
	<update id="update" parameterType="SentShareDTO">
		UPDATE sentshare SET subject = #{subject}, wname = #{wname}, content = #{content} WHERE bbsno = #{bbsno}
	</update>
	
	<!-- 조회수 증가 -->
	<update id="readcnt" parameterType="int">
		UPDATE sentshare SET readcnt = readcnt + 1 WHERE bbsno = #{bbsno}
	</update>
	
	<!-- 글 전체 갯수 보여주기 -->
	<select id="getArticleCount" resultType="int">
		SELECT COUNT(*) cnt FROM sentshare
	</select>
</mapper>